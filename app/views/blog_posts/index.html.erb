<div class='bg-slate-100 shadow-lg rounded-lg p-4 max-w-3xl mx-auto'>
  <div>
    <% if @blog_posts.present? %>
      <% @blog_posts.each_with_index do |blog_post,index|%>
        <div class="pb-4 border-b-2 <%= 'border-none' if index == @blog_posts.length - 1 %>">
          <div class='mt-2'>
            <h2 class='font-semibold text-indigo-700 mt-2 inline'><%= link_to blog_post.title , blog_post_path(blog_post.id)%></h2>
            <% if blog_post.draft? %>
              <span class="badge text-red-600 bg-red-200">Draft</span>
            <% elsif blog_post.scheduled? %>
              <span class="badge text-yellow-600 bg-yellow-200">Scheduled</span>
            <% else %>
              <span class="badge text-green-600  bg-green-200 ">Published</span>
            <% end %>
          </div>
          <p class ='text-base text-gray-800 mb-4'><%= blog_post.body%></p>
        </div>
      <%end%>
    <% else %>
      <h1 class='text-center text-gray-800 font-semibold mt-4'>You have not created any posts yet! To write your first blog post click on the button below.</h1>
    <% end %>
    <%if user_signed_in?%>
      <div class='flex justify-center'>
        <%= link_to "Create a new blog" ,new_blog_post_path ,class:"createButton block max-w-fit mt-4"%>
      </div>
    <%end%>
  </div>
</div>
